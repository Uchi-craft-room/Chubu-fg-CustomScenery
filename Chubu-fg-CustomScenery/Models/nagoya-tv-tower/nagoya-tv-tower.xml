<?xml version="1.0"?>

<PropertyList>
	<path>nagoya-tv-tower.ac</path>

   <effect>
     <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>red-lamp</object-name>
    <object-name>red-lamp-bright</object-name>
   </effect>

	<animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>25000</max-m>
	</animation>

  <animation> 
    <type>textranslate</type> 
    <object-name>tower</object-name>
    <object-name>frame</object-name>
    <object-name>shaft</object-name> 
    <property>/sim/time/sun-angle-rad</property>
    <step> 1.57 </step>
    <factor>0.318471338</factor>
    <center>
     <x-m> 0 </x-m>
     <y-m> 0 </y-m>
     <z-m> 0 </z-m>
    </center>
    <axis> 
      <x> -1 </x> 
      <y>  0 </y> 
      <z>  0 </z> 
    </axis> 
  </animation>


  <animation>
    <type>material</type>
    <object-name>LINE1</object-name>
    <object-name>shaft</object-name>
    <condition>
      <greater-than>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.57</value>
      </greater-than>
    </condition>
    <emission>
      <red>   1 </red>
      <green> 1 </green>
      <blue>  1 </blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>tower</object-name>
    <condition>
      <greater-than>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.57</value>
      </greater-than>
    </condition>
    <emission>
      <red>   1 </red>
      <green> 1 </green>
      <blue>  1 </blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>frame</object-name>
    <object-name>LINE</object-name>
    <condition>
      <greater-than>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.57</value>
      </greater-than>
    </condition>
    <emission>
      <red>   0.5 </red>
      <green> 0.5 </green>
      <blue>  0.2 </blue>
    </emission>
  </animation>


  <animation>
    <type>material</type>
    <object-name>red-lamp</object-name>
    <object-name>red-lamp-bright</object-name>
    <condition>
      <greater-than>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.57</value>
      </greater-than>
    </condition>
    <emission>
      <red>   1 </red>
      <green> 1 </green>
      <blue>  1 </blue>
    </emission>
  </animation>

  <animation>
    <type>select</type>
    <object-name>red-lamp</object-name>
    <object-name>red-lamp-bright</object-name>
    <condition>
      <greater-than>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.57</value>
      </greater-than>
    </condition>
  </animation>


<!-- red lamp -->
