<?xml version="1.0"?>

<PropertyList>
	<path>RJGG_Terminal.ac</path>

  <animation>
    <type>material</type>
		<object-name>RJGG_windows1</object-name>
		<object-name>RJGG_windows2</object-name>
		<object-name>RJGG_walls2</object-name>
		<object-name>RJGG_jetway_windows1</object-name>
    <condition>
      <greater-than>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.57</value>
      </greater-than>
    </condition>
    <emission>
      <red>   0.8 </red>
      <green> 0.8 </green>
      <blue>  0.8 </blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
		<object-name>RJGG_windows1</object-name>
		<object-name>RJGG_windows2</object-name>
		<object-name>RJGG_walls2</object-name>
		<object-name>RJGG_jetway_windows1</object-name>
    <condition>
      <less-than-equals>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.57</value>
      </less-than-equals>
    </condition>
    <emission>
      <red>   0.0 </red>
      <green> 0.0 </green>
      <blue>  0.0 </blue>
    </emission>
  </animation>

	<animation>
		<type>textranslate</type>
		<object-name>RJGG_windows1</object-name>
		<object-name>RJGG_windows2</object-name>
		<object-name>RJGG_walls2</object-name>
		<object-name>RJGG_jetway_windows1</object-name>
		<property>/sim/time/sun-angle-rad</property>
			<step> 1.57 </step>
			<factor>0.318471338</factor>
		<center>
			<x-m> 0 </x-m>
			<y-m> 0 </y-m>
			<z-m> 0 </z-m>
		</center>
		<axis>
			<x>  0 </x>
			<y> -1 </y>
			<z>  0 </z>
		</axis>
	</animation>	
	
</PropertyList>