<?xml version="1.0"?>

<PropertyList>
	<path>nagoya-castle.ac</path>

	<animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>25000</max-m>
	</animation>


  <animation>
    <type>material</type>
    <object-name>honmaru</object-name>
    <condition>
      <greater-than>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.57</value>
      </greater-than>
    </condition>
    <emission>
      <red>   0.4 </red>
      <green> 0.4 </green>
      <blue>  0.4 </blue>
    </emission>
  </animation>

</PropertyList>
