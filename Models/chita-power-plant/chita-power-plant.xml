      <z>  0 </z> 
    </axis> 
  </animation>


  <animation>
    <type>material</type>
    <object-name>chimney</object-name>
    <condition>
      <greater-than>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.57</value>
      </greater-than>
    </condition>
    <emission>
      <red>   1 </red>
      <green> 1 </green>
      <blue>  1 </blue>
    </emission>
  </animation>


  <animation>
    <type>material</type>
    <object-name>light</object-name>
    <emission>
      <red>   1 </red>
      <green> 1 </green>
      <blue>  1 </blue>
    </emission>
  </animation>



    <animation>
        <type>noshadow</type>
        <object-name>light</object-name>
    </animation>


